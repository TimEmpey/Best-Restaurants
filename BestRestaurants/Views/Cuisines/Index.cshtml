@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/index.css">

@using BestRestaurants.Models;

<h1>Cuisines</h1>

<div class="container list">
  @if (@Model.Count == 0)
  {
    <h3>No cuisines have been added yet!</h3>
  } 
      @foreach(Cuisine cuisine in Model)
    {
      <li><span class="cuisines">@cuisine.Name</span></li>
    }
</div>


<div class="container buttons">
  <button class="btn btn-outline-info restaurantNew">@Html.ActionLink("Add new restaurant", "Create", "Restaurants")</button>
  <button class="btn btn-outline-info cuisineNew">@Html.ActionLink("Add new cuisine", "Create")</button>
  <button class="btn btn-outline-info home">@Html.ActionLink("Home", "Index", "Home")</button>
</div>
