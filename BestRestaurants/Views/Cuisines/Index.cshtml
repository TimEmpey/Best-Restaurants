@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>

<button class="btn btn-light">@Html.ActionLink("Add new cuisine", "Create")</button>
<button class="btn btn-light">@Html.ActionLink("Add new restaurant", "Create", "Restaurants")</button>
<button class="btn btn-light">@Html.ActionLink("Home", "Index", "Home")</button>